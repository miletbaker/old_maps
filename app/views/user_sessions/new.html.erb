<h1 class="typo">Log In</h1>
<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_for @user_session do |f| %>
	
	<%= error_messages_for :user_session, :header_message => "Please check the information you have provided below.", :message => "", :class => "alert" %>
	<ol class="form">
		<li class="label typo"><%= f.label :email, "Email Address" %></li>
		<li class="field"><%= f.text_field :email, :class => "big-text" %></li>
		<li class="label typo"><%= f.label :password, "Password" %></li>
		<li class="field">
			<%= f.password_field :password, :size => 20, :class => "nudge" %>
			<span class="typo"><%= link_to "Reset password", :reset_password %></span>
		</li>
		<li class="label field typo"><%= f.check_box :remember_me %> <%= f.label :remeber_me, "Remember me on this computer" %></li>
		<li class="submit">
			<button type="submit">
				Login <img src="/images/icons/arrow-000-medium.png" alt="Go">
			</button>
		</li>

<% end %>
